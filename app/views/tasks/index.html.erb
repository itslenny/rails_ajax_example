<h1>
  Tasks
  <%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe,new_task_path, :class=>'btn btn-success pull-right' %>
</h1>
<div class="row">
  <div class="col-sm-6">
    <table class="table">
      <thead>
        <tr>
          <th colspan="2">Current Tasks</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |t| %>
          <tr>
            <td><%= t.sort %></td>
            <td><%= t.title %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_task_path(t) %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, t, method: :delete %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-arrow-up"></i>'.html_safe, sort_up_task_path(t), method: :patch %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-arrow-down"></i>'.html_safe, sort_down_task_path(t), method: :patch %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>